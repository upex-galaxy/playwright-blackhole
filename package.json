{
  "name": "playwright-ts",
  "version": "18",
  "description": "playwright project with typescript and azure devops integration",
  "main": "index.js",
  "scripts": {
    "pw:install": "npx playwright install --with-deps",
    "test:plan": "npx playwright test --reporter=list --project=chromium --list",

    "test": "PLAYWRIGHT_JUNIT_OUTPUT_NAME=test-report/chromium-importer-report.xml npx playwright test --project=chromium --project=chromium",
    "test:ui": "npx playwright test --ui",
    "test:trace": "npx playwright show-trace",
    "debug": "npx playwright test --project=chromium --debug",

    "test:chrome": "PLAYWRIGHT_JUNIT_OUTPUT_NAME=test-report/chromium-importer-report.xml npx playwright test --project=chromium --headed",
    "test:firefox": "PLAYWRIGHT_JUNIT_OUTPUT_NAME=test-report/firefox-importer-report.xml npx playwright test --project=firefox --headed",
    "test:edge": "PLAYWRIGHT_JUNIT_OUTPUT_NAME=test-report/edge-importer-report.xml npx playwright test --project=edge --headed",
    
    "regression:all": "PLAYWRIGHT_JUNIT_OUTPUT_NAME=test-report/all-browser-report.xml npx playwright test",
    "regression:chrome": "PLAYWRIGHT_JUNIT_OUTPUT_NAME=test-report/chromium-importer-report.xml npx playwright test --project=chromium",
    "regression:firefox": "PLAYWRIGHT_JUNIT_OUTPUT_NAME=test-report/firefox-importer-report.xml npx playwright test --project=firefox",
    "regression:edge": "PLAYWRIGHT_JUNIT_OUTPUT_NAME=test-report/edge-importer-report.xml npx playwright test --project=edge",

    "allure:open": "allure generate --clean",
    "allure:report": "npm run allure:open && allure open --host localhost --port 7070",

    "prettier:write": "npx prettier --write tests/**/*.ts",
    "prettier:check": "npx prettier --check tests/**/*.ts",
    "lint:check": "npx eslint tests/**/*.ts",
    "lint:fix": "npx eslint --fix tests/**/*.ts"
  },
  "keywords": [
    "playwright"
  ],
  "author": "upex",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@playwright/test": "^1.39.0",
    "@types/node": "20.9.0",
    "@typescript-eslint/eslint-plugin": "6.11.0",
    "@typescript-eslint/parser": "6.11.0",
    "allure-commandline": "2.24.1",
    "allure-playwright": "2.9.2",
    "dotenv": "16.0.3",
    "eslint": "8.53.0",
    "eslint-plugin-only-warn": "1.1.0",
    "prettier": "3.1.0",
    "typescript": "5.2.2"
  }
}
